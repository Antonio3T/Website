@model IEnumerable<Website.Models.Category>

@{
    ViewData["Title"] = "List of Categories";
}

<h1>List of Categories</h1>

<br />

@if (User.IsInRole("Admin") || User.IsInRole("Employee"))
{
    <form asp-action="Create"
    data-ajax="true"
    data-ajax-method="post"
    data-ajax-mode="replace"
    data-ajax-update="#Categories"
    data-ajax-success="Success">

        <input id="inp" type="text" name="NewName"/>
        <input type="submit" value="Create" class="btn btn-primary" style="font-size: 11px"/>
    </form>
}

<br />

<partial name="Listing" model="Model"/>

<script>
    function Success()
    {
        $("#inp").val("");
    }
</script>