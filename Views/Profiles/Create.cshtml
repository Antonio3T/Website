@model Website.Models.EmployeeProfile

@{
    ViewData["Title"] = "Create Employee Profile";
}

<h1>Create Employee Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmployeeProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Username"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            @*<div class="form-floating">
                <input asp-for="Role" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Role"></label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Role"></label>
                <select asp-for="Role" class="form-control" asp-items='new SelectList(ViewBag.roles, "Name", "Name")'>
                    <option value="">Select a Role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
